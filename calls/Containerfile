FROM node:22-alpine AS builder

# Set the working directory inside the container
WORKDIR /app

RUN apk add --no-cache python3 make g++

# Copy package.json and package-lock.json to install dependencies
COPY package.json  ./

# Install dependencies
RUN npm list @modelcontextprotocol/sdk || true
RUN npm install @modelcontextprotocol/sdk@latest
RUN npm install

# Copy the rest of the application source code
COPY tsconfig.json ./
COPY src/ src/

# Build the application using TypeScript
RUN npm run build

# Use a smaller Node.js image for the final image
FROM node:22-alpine

# Set the working directory inside the container
WORKDIR /app

# Copy the built application from the builder stage
COPY --from=builder /app/dist /app/dist
COPY --from=builder /app/package.json /app/package.json
COPY --from=builder /app/package-lock.json /app/package-lock.json

# Install only production dependencies
RUN apk add --no-cache python3 make g++ \
    && npm ci --omit=dev \
    && apk del python3 make g++


LABEL org.opencontainers.image.title="VoipNow Calls MCP server"
LABEL org.opencontainers.image.description="To be used for running VoipNow Calls MCP server"
LABEL org.opencontainers.image.vendor="4PSA, Inc"

# Specify the command to run the application
ENTRYPOINT ["node", "dist/index.js"]